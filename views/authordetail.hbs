<div class="container">
  <div class="section">
  <div class="row">
<div class="col s12 m12">
    <div class="row">
        <div class="col s12 m6 offset-m3">
          <div class="card large">
              <div class="card-image waves-effect waves-block waves-light">
                  <img class="activator imageborder" src="{{author.author_portrait_url}}">
              </div>
              <div class="card-content">
                  <span class="card-title activator grey-text text-darken-4">{{author.first_name}} {{author.last_name}}<i class="material-icons right">more_vert</i></span>
                  <br>
              </div>
              <div class="card-reveal">
      <span class="card-title grey-text text-darken-4" id="detail-center">{{author.first_name}} {{author.last_name}}<i class="material-icons right">close</i></span>
      <p>
        Biography:
      </p>
      <p>
        {{author.biography}}
      </p>
      <p>
        Books:
      </p>
      {{#each book}}
        <p>
          {{this.title}}
        </p>
      {{/each}}

  </div>
  <div class="center-btn">
    <a href="/authors/{{author.id}}/edit/" class=" waves-effect waves-light btn">Edit Author</a>
    <a href="/authors/{{author.id}}/confirm" class="waves-effect waves-light btn">Delete Author</a>
</div>
</div>
<center><a href="/authors" class="waves-effect waves-light btn">Back to Authors</a></center>
        </div>
    </div>
</div>
</div>
</div>
</div>
